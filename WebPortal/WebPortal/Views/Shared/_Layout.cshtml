@using WebPortal.Helpers

@{
    string loginname = (string)ViewBag.LoggedInAs;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bootstrap/css")
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Renew Service", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                @Html.Partial("_NavigationMenu", loginname)
            </nav>
        </div>
    </header>
    <div id="page" class="site-pagemargin-top">
        <section id="main">
            @RenderBody()
        </section>
    </div>
    @Html.Partial("_Footer")
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBmNxg2znkmhynBQgfFqP7fznbycHXiVmc" type="text/javascript"></script>
    }
    else
    {
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyANry8wQsbEBLLvb0EsFgGsLOHqiViaPfI" type="text/javascript"></script>
    }
    @Scripts.Render("~/jquery/js")
    @Scripts.Render("~/bootstrap/js")
    @Scripts.Render("~/site-components/js")
    @RenderSection("scripts", required: false)
</body>
</html>
