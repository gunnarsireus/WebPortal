        <div class="col-md-12">
            @Html.SiteStringEditor("Namn", LABELCOLS, "name", SiteTextInputs.StringType.TEXT, IssueClass.MINLEN_NAME, IssueClass.MAXLEN_NAME, SiteTextInputs.GlyphIcon.TITLE)
        </div>
    </div>
