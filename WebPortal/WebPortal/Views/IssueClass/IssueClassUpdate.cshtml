@using ServerLibrary.Model
@using WebPortal.Helpers
@model WebPortal.UIModel.UIIssueClass_CRU

@{
    int LABELCOLS = 2;
}

@using (Html.SiteInputPanel("update-issueclass-form", "Uppdatera ärendeklass", SiteInputPanels.NONE, SiteInputPanels.CLOSE | SiteInputPanels.APPLY))
{
